@model DemoApplication.Models.Category

<form method="post">
    <input  asp-for="CategoryId" hidden/>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">
               Delete Category
            </h2>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="CategoryName"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="CategoryName" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
                                <i class="fa-solid fa-backward"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

